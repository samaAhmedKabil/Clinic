<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02"
        />

    <TextView
        android:id="@+id/arrowBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.11"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintTop_toBottomOf="@+id/horizontalUp"
        />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_profile"
        android:fontFamily="@font/poppins_black"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/arrowBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/arrowBack"
        app:layout_constraintTop_toTopOf="@id/arrowBack" />
    <ImageView
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/profile_container"
        app:circularflow_defaultRadius="50dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.80"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_pic"
        app:backgroundTint="@color/pink"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintTop_toBottomOf="@id/profile"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sama Ahmed"
        android:fontFamily="@font/rubik_variable_font_wight"
        app:layout_constraintTop_toBottomOf="@id/pic"
        app:layout_constraintStart_toStartOf="@id/pic"
        app:layout_constraintEnd_toEndOf="@id/pic"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/default_blue"/>
    <TextView
        android:id="@+id/specialization"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/role"
        app:layout_constraintTop_toBottomOf="@id/pic"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/specializationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="nhrbfierb , fhouero"
        app:layout_constraintStart_toEndOf="@id/specialization"
        app:layout_constraintTop_toTopOf="@id/specialization"
        app:layout_constraintBottom_toBottomOf="@id/specialization"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/gender"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_gender"
        app:layout_constraintTop_toBottomOf="@id/specialization"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/genderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Male"
        app:layout_constraintStart_toEndOf="@id/gender"
        app:layout_constraintTop_toTopOf="@id/gender"
        app:layout_constraintBottom_toBottomOf="@id/gender"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/agee"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_date"
        app:layout_constraintTop_toBottomOf="@id/gender"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/ageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="21"
        app:layout_constraintStart_toEndOf="@id/agee"
        app:layout_constraintTop_toTopOf="@id/agee"
        app:layout_constraintBottom_toBottomOf="@id/agee"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_location"
        app:layout_constraintTop_toBottomOf="@id/agee"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Giza"
        app:layout_constraintStart_toEndOf="@id/location"
        app:layout_constraintTop_toTopOf="@id/location"
        app:layout_constraintBottom_toBottomOf="@id/location"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_email"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="hf22bihebv@gmail.com"
        app:layout_constraintStart_toEndOf="@id/email"
        app:layout_constraintTop_toTopOf="@id/email"
        app:layout_constraintBottom_toBottomOf="@id/email"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_phone"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0108975984"
        app:layout_constraintStart_toEndOf="@id/phone"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>