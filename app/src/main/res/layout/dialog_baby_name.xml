<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/topLine"
        android:layout_width="wrap_content"
        android:layout_height="2.5dp"
        android:background="@drawable/top_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_black"
        android:text="ما هو الاسم المفضل لديك ؟؟"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLine"/>

    <TextView
        android:id="@+id/logout_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="ساعدي باقي الامهات باقتراحاتك ... "
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/logout"/>


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="اكتب اسم الطفل"
        android:textDirection="rtl"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logout_des"
        android:textColor="@color/default_pink"
        android:background="@drawable/text_box"
        android:padding="10dp"/>

    <RadioButton
        android:id="@+id/radioMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etName"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/gender_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gender_boy"
        app:layout_constraintEnd_toStartOf="@id/radioMale"
        app:layout_constraintTop_toTopOf="@id/radioMale"
        app:layout_constraintBottom_toBottomOf="@id/radioMale"/>

    <TextView
        android:id="@+id/boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/gender_boy"
        app:layout_constraintTop_toTopOf="@id/gender_boy"
        app:layout_constraintBottom_toBottomOf="@id/gender_boy"
        android:text="ذكر"
        android:textSize="15sp"
        android:textColor="@color/default_blue"
        android:layout_marginEnd="8dp"/>

    <RadioButton
        android:id="@+id/radioFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/boy"
        app:layout_constraintTop_toBottomOf="@id/etName"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/gender_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gender_girl"
        app:layout_constraintEnd_toStartOf="@id/radioFemale"
        app:layout_constraintTop_toTopOf="@id/radioFemale"
        app:layout_constraintBottom_toBottomOf="@id/radioFemale"/>

    <TextView
        android:id="@+id/girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/gender_girl"
        app:layout_constraintTop_toTopOf="@id/gender_girl"
        app:layout_constraintBottom_toBottomOf="@id/gender_girl"
        android:text="انثي"
        android:textSize="15sp"
        android:textColor="@color/default_pink"
        android:layout_marginEnd="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_button"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/girl"
        android:textSize="15sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
