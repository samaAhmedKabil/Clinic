<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        />

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.11"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_up"
        />

    <TextView
        android:id="@+id/setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@id/arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/arrow_back"
        app:layout_constraintTop_toTopOf="@id/arrow_back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_text"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:cardElevation="20dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/call_item"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="My Profile"
                android:textColor="@color/default_pink"
                android:textStyle="bold|italic"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/person"
                app:layout_constraintTop_toTopOf="@id/container"
                app:layout_constraintBottom_toBottomOf="@id/container"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/person"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/default_blue"
                android:background="@drawable/default_profile_pic"
                app:layout_constraintStart_toStartOf="@id/container"
                app:layout_constraintTop_toTopOf="@id/container"
                app:layout_constraintBottom_toBottomOf="@id/container"
                android:layout_margin="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        app:cardElevation="20dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/call_item"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/person2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/default_blue"
                android:background="@drawable/logout_icon"
                app:layout_constraintStart_toStartOf="@id/container2"
                app:layout_constraintTop_toTopOf="@id/container2"
                app:layout_constraintBottom_toBottomOf="@id/container2"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Logout"
                android:textColor="@color/default_pink"
                android:textStyle="bold|italic"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/person2"
                app:layout_constraintTop_toTopOf="@id/container2"
                app:layout_constraintBottom_toBottomOf="@id/container2"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>