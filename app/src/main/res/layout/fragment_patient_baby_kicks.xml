<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.11"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintTop_toBottomOf="@id/horizontalUp"
        />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalUp"
        android:text="ركلات طفلك"
        android:textStyle="bold|italic"
        android:textSize="22sp"
        android:textColor="@color/default_pink"
        android:fontFamily="@font/poppins_black"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/thin_line"
        app:layout_constraintTop_toBottomOf="@id/about"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/kicks_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.28"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/pregnant2_gif" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="تُعَدُّ متابعة حركات الجنين أو ما يُعرف بـ ركلات الطفل خلال الحمل أمرًا مهمًا لطمأنة الأم على صحة جنينها ونموه بشكل طبيعي. فهذه الحركات تدل على نشاط الجنين ووصول الأكسجين والمواد الغذائية إليه بشكل كافٍ. كما تساعد متابعة الركلات بانتظام على اكتشاف أي تغييرات أو مشاكل مبكرًا، مما يتيح التدخل الطبي في الوقت المناسب لحماية صحة الأم والجنين."
                android:textSize="12sp"
                android:textColor="@color/default_blue"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:lineSpacingExtra="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/img"
                android:layout_marginStart="100dp"
                android:textStyle="bold"
                android:paddingVertical="8dp"
                android:paddingHorizontal="8dp"
                android:fontFamily="@font/poppins_black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/kicks_counter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/baby_feet"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/kicks_info"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/kicks_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kicks_counter"
        android:text="0"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        android:textColor="@color/pink"
        app:layout_constraintEnd_toEndOf="@id/kicks_counter"
        app:layout_constraintStart_toStartOf="@id/kicks_counter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kicks_num"
        app:layout_constraintEnd_toEndOf="@id/kicks_num"
        app:layout_constraintStart_toStartOf="@id/kicks_num"
        android:text="ركلات"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/default_blue"/>

    <TextView
        android:id="@+id/reset"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ابدأي العد من جديد"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/reset"
        app:layout_constraintStart_toStartOf="@id/reset"
        app:layout_constraintEnd_toEndOf="@id/reset"/>

</androidx.constraintlayout.widget.ConstraintLayout>