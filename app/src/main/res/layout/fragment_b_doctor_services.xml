<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/default_blue_transparent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintTop_toBottomOf="@+id/horizontalUp"
        />

    <TextView
        android:id="@+id/newUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الخدمات اللتي يقدمها الدكتور"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        android:textColor="@color/default_pink"
        app:layout_constraintBottom_toBottomOf="@id/arrowBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/arrowBack"
        app:layout_constraintTop_toTopOf="@id/arrowBack" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/thin_line"
        app:layout_constraintTop_toBottomOf="@id/newUser"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"/>

    <VideoView
        android:id="@+id/services_video"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/data"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"/>

    <ScrollView
        android:id="@+id/data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_background"
        app:layout_constraintTop_toBottomOf="@id/services_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عن خدماتنا"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"
                android:textColor="@color/grey"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <!-- 10 bullet points -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• متابعة الحمل"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• متابعة الحمل الحرج"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• الكشف بالموجات الصوتية "
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• ولادة طبيعية بدون الم"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• ولادة قيصرية بدون الم"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• حالات المشيمة المتقدمة و الملتصقة (مع الحفاظ على الرحم)"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• علاج حالات تأخر الانجاب"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• وسائل تنظيم الاسرة"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• جراحات المناظير التشخيصية و العلاجية"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• جراحات الاورام النسائية"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textColor="@color/default_blue" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/horizontalRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                tools:listitem="item"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>