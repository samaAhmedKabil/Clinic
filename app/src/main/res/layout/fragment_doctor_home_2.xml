<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_top"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/welcome"
        app:layout_constraintTop_toTopOf="@id/welcome"
        android:src="@drawable/menu_bar"
        android:background="#80C8BFE7"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/clinic_logo"
        app:layout_constraintEnd_toEndOf="@id/welcome"
        app:layout_constraintTop_toTopOf="@id/welcome"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#80C8BFE7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hi_dr_ehab_kabil"
        android:textSize="20sp"
        android:textColor="#878787"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@id/welcome"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/menu"
        android:layout_marginTop="35dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/all_cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/welcome_top"
                android:backgroundTint="@color/default_pink_transparent"
                android:drawableStart="@drawable/pregnant1"
                android:paddingStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_cases"
                android:textSize="25dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/all_cases"
                app:layout_constraintTop_toTopOf="@id/all_cases"
                app:layout_constraintBottom_toBottomOf="@id/all_cases"
                app:layout_constraintStart_toStartOf="@id/all_cases"
                android:layout_marginStart="100dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/all_bookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/welcome_top"
                    android:backgroundTint="@color/default_blue_transparent"
                    android:drawableStart="@drawable/sonography"
                    android:paddingStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_bookings"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/all_bookings"
                    app:layout_constraintTop_toTopOf="@id/all_bookings"
                    app:layout_constraintBottom_toBottomOf="@id/all_bookings"
                    app:layout_constraintStart_toStartOf="@id/all_bookings"
                    android:layout_marginStart="100dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/common_ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/welcome_top"
                    android:backgroundTint="#807D7D7D"
                    android:drawableStart="@drawable/caring_pregnant"
                    android:paddingStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_questions"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/common_ques"
                    app:layout_constraintTop_toTopOf="@id/common_ques"
                    app:layout_constraintBottom_toBottomOf="@id/common_ques"
                    app:layout_constraintStart_toStartOf="@id/common_ques"
                    android:layout_marginStart="140dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/manage_bookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/welcome_top"
                    android:backgroundTint="#C8BFE7"
                    android:drawableStart="@drawable/ultrasound"
                    android:paddingStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manage_available_slots"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/manage_bookings"
                    app:layout_constraintTop_toTopOf="@id/manage_bookings"
                    app:layout_constraintBottom_toBottomOf="@id/manage_bookings"
                    app:layout_constraintStart_toStartOf="@id/manage_bookings"
                    android:layout_marginStart="140dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>