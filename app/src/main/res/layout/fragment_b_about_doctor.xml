<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/default_blue_transparent">

    <TextView
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/white_background"
        android:stateListAnimator="@anim/slide_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.60" />

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.11"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:text="عن الدكتور"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:textColor="@color/default_pink"
        android:fontFamily="@font/poppins_black"/>

    <ImageView
        android:id="@+id/dr_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/circle_uncle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about"
        app:layout_constraintBottom_toTopOf="@id/info_container" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/contact_title"
        app:layout_constraintTop_toBottomOf="@id/contact_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/dr_ehab_kabil"
        android:textStyle="bold"
        android:textColor="@color/default_blue"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/speciality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/name"
        app:layout_constraintStart_toStartOf="@id/info_container"
        android:ellipsize="end"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:text="@string/onboarding_intro"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/v_star1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/speciality"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow_star"/>
    <TextView
        android:id="@+id/v_star2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/v_star1"
        app:layout_constraintTop_toBottomOf="@id/speciality"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow_star"/>

    <TextView
        android:id="@+id/v_star3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/v_star2"
        app:layout_constraintTop_toBottomOf="@id/speciality"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow_star"/>

    <TextView
        android:id="@+id/v_star4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/v_star3"
        app:layout_constraintTop_toBottomOf="@id/speciality"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow_star"/>

    <TextView
        android:id="@+id/v_star5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/v_star4"
        app:layout_constraintTop_toBottomOf="@id/speciality"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow_star"/>

    <TextView
        android:id="@+id/veseeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="علي فيزيتا (Veseeta)"
        android:textSize="12sp"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/v_star5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_star5"
        app:layout_constraintBottom_toBottomOf="@id/v_star5"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/veseeta_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/veseeta_logo"
        app:layout_constraintTop_toTopOf="@id/veseeta"
        app:layout_constraintBottom_toBottomOf="@id/veseeta"
        app:layout_constraintEnd_toStartOf="@id/veseeta"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/c_star1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/v_star1"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow_star"/>
    <TextView
        android:id="@+id/c_star2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/c_star1"
        app:layout_constraintTop_toBottomOf="@id/v_star1"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow_star"/>

    <TextView
        android:id="@+id/c_star3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/c_star2"
        app:layout_constraintTop_toBottomOf="@id/v_star1"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow_star"/>

    <TextView
        android:id="@+id/c_star4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/c_star3"
        app:layout_constraintTop_toBottomOf="@id/v_star1"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow_star"/>

    <TextView
        android:id="@+id/c_star5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/c_star4"
        app:layout_constraintTop_toBottomOf="@id/v_star1"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow_star"/>

    <TextView
        android:id="@+id/clindo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="علي كليندو (Clindo)"
        android:textSize="12sp"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/c_star5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/c_star5"
        app:layout_constraintBottom_toBottomOf="@id/c_star5"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/clindo_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/clindo_logo"
        app:layout_constraintTop_toTopOf="@id/clindo"
        app:layout_constraintBottom_toBottomOf="@id/clindo"
        app:layout_constraintEnd_toStartOf="@id/clindo"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/info_container"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/info_container"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="اعرف اكثر ؟؟"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="@id/info_container"
        android:layout_marginBottom="30dp"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/pink"
        android:text="@string/book_an_appointment_now"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>