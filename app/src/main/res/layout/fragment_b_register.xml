<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_blue_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_uncle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalUp"
        app:layout_constraintBottom_toTopOf="@id/container"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.8"
        android:background="@drawable/profile_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp"
        />

    <TextView
        android:id="@+id/newUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_user"
        android:textSize="25sp"
        android:textColor="@color/default_pink"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@id/container"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toTopOf="@id/container" />

    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_marginStart="8dp"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintTop_toTopOf="@id/newUser"
        app:layout_constraintBottom_toBottomOf="@id/newUser" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_box"
        android:layout_marginHorizontal="20dp"
        android:hint="الاسم الاول"
        android:textDirection="rtl"
        android:paddingHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/newUser"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/firstNameIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/name"
        app:layout_constraintEnd_toEndOf="@+id/firstName"
        app:layout_constraintTop_toTopOf="@id/firstName"
        app:layout_constraintBottom_toBottomOf="@id/firstName"
        android:layout_marginEnd="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/cursor"
        app:layout_constraintEnd_toStartOf="@id/firstNameIcon"
        app:layout_constraintTop_toTopOf="@id/firstName"
        app:layout_constraintBottom_toBottomOf="@id/firstName"
        android:layout_marginEnd="8dp"
        />
    <EditText
        android:id="@+id/lastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_box"
        android:layout_marginHorizontal="20dp"
        android:hint="الاسم الاخير"
        android:paddingHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toBottomOf="@id/firstName"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/lastNameIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/name"
        app:layout_constraintEnd_toEndOf="@+id/lastName"
        app:layout_constraintTop_toTopOf="@id/lastName"
        app:layout_constraintBottom_toBottomOf="@id/lastName"
        android:layout_marginEnd="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/cursor"
        app:layout_constraintEnd_toStartOf="@id/lastNameIcon"
        app:layout_constraintTop_toTopOf="@id/lastNameIcon"
        app:layout_constraintBottom_toBottomOf="@id/lastNameIcon"
        android:layout_marginEnd="8dp"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_box"
        android:hint="رقم التيليفون"
        android:textDirection="rtl"
        android:inputType="number"
        android:paddingHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toBottomOf="@id/lastName"
        />
    <TextView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/phone"
        app:layout_constraintEnd_toEndOf="@id/phone"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cursor"
        app:layout_constraintEnd_toStartOf="@id/call"
        app:layout_constraintTop_toTopOf="@id/call"
        app:layout_constraintBottom_toBottomOf="@id/call"
        android:layout_marginEnd="8dp"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_box"
        android:hint="@string/e_mail"
        android:textDirection="rtl"
        android:paddingHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toBottomOf="@id/phone"
        />
    <TextView
        android:id="@+id/emailIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_email_24"
        app:layout_constraintEnd_toEndOf="@id/email"
        app:layout_constraintTop_toTopOf="@id/email"
        app:layout_constraintBottom_toBottomOf="@id/email"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cursor"
        app:layout_constraintEnd_toStartOf="@id/emailIcon"
        app:layout_constraintTop_toTopOf="@id/emailIcon"
        app:layout_constraintBottom_toBottomOf="@id/emailIcon"
        android:layout_marginEnd="8dp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/text_box"
        android:hint="@string/password"
        android:textDirection="rtl"
        android:inputType="textVisiblePassword"
        android:paddingHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toBottomOf="@+id/email"
        />

    <TextView
        android:id="@+id/show_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/show_password"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintTop_toTopOf="@id/password"
        app:layout_constraintBottom_toBottomOf="@id/password"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_lock_24"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintTop_toTopOf="@id/password"
        app:layout_constraintBottom_toBottomOf="@id/password"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cursor"
        app:layout_constraintEnd_toStartOf="@id/lock"
        app:layout_constraintTop_toTopOf="@id/lock"
        app:layout_constraintBottom_toBottomOf="@id/lock"
        android:layout_marginEnd="8dp"
        />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/text_box"
        android:hint="@string/confirm_password"
        android:textDirection="rtl"
        android:inputType="textVisiblePassword"
        android:paddingHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toBottomOf="@+id/password"
        />

    <TextView
        android:id="@+id/confirm_show_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/show_password"
        app:layout_constraintStart_toStartOf="@id/confirm_password"
        app:layout_constraintTop_toTopOf="@id/confirm_password"
        app:layout_constraintBottom_toBottomOf="@id/confirm_password"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/confirm_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_lock_24"
        app:layout_constraintEnd_toEndOf="@id/confirm_password"
        app:layout_constraintTop_toTopOf="@id/confirm_password"
        app:layout_constraintBottom_toBottomOf="@id/confirm_password"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cursor"
        app:layout_constraintEnd_toStartOf="@id/confirm_lock"
        app:layout_constraintTop_toTopOf="@id/confirm_lock"
        app:layout_constraintBottom_toBottomOf="@id/confirm_lock"
        android:layout_marginEnd="8dp"
        />

    <ImageButton
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_button"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnRegister"
        app:layout_constraintEnd_toEndOf="@id/btnRegister"
        app:layout_constraintTop_toTopOf="@id/btnRegister"
        app:layout_constraintBottom_toBottomOf="@id/btnRegister"
        android:text="@string/register"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic|bold"/>

    <ProgressBar
        android:id="@+id/in_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:indeterminateTint="@color/default_pink"/>

</androidx.constraintlayout.widget.ConstraintLayout>