<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.11"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintTop_toBottomOf="@id/horizontalUp"
        />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalUp"
        android:text="@string/what_to_name_your_baby"
        android:textStyle="bold|italic"
        android:textSize="22sp"
        android:textColor="@color/default_pink"
        android:fontFamily="@font/poppins_black"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/thin_line"
        app:layout_constraintTop_toBottomOf="@id/about"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/evening_slots"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintWidth_percent="0.47"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:backgroundTint="@color/light_grey"
        android:text="@string/girls"
        android:textColor="@color/black"
        app:cornerRadius="40dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/morning_slots"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintWidth_percent="0.47"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:cornerRadius="40dp"
        android:text="@string/boys"
        app:backgroundTint="@color/light_grey"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/add"
        app:backgroundTint="@color/default_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_names"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="8dp"
        tools:listitem="@layout/item_baby_name"
        app:layout_constraintTop_toBottomOf="@id/evening_slots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add" />

</androidx.constraintlayout.widget.ConstraintLayout>