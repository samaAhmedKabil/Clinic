<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/circleImageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/uncle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/Continue_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/patient"
        android:paddingTop="10dp"
        android:text="@string/continue_as_patient"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
        app:layout_constraintVertical_bias="0.24" />

    <CheckBox
        android:id="@+id/patient_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/default_pink"
        app:layout_constraintTop_toTopOf="@id/Continue_patient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Continue_patient"
        app:layout_constraintBottom_toBottomOf="@id/Continue_patient" />

    <TextView
        android:id="@+id/Continue_Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/doctor"
        android:text="@string/continue_as_doctor"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Continue_patient" />

    <CheckBox
        android:id="@+id/doctor_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/default_pink"
        app:layout_constraintTop_toTopOf="@id/Continue_Doctor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Continue_Doctor"
        app:layout_constraintBottom_toBottomOf="@id/Continue_Doctor"
        />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button"
        android:gravity="center"
        android:text="Next"
        android:textColor="#FFFF"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableRight="@drawable/next_button"
        app:layout_constraintTop_toBottomOf="@+id/Continue_Doctor" />

</androidx.constraintlayout.widget.ConstraintLayout>